<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RepoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomPopup" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="textAppearanceLargePopupMenu">
            @style/TextAppearance.App.Subtitle1
        </item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.App.Subtitle1</item>
        <item name="popupMenuBackground">@drawable/custom_popup_background</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:layout_marginEnd">-10dp</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/ic_issue_menu_selector</item>
    </style>

    <style name="buttonRadius">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>